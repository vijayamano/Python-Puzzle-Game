#:kivy 1.10.0
<GameScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            texture: root.bg_texture

    ShapePicker:
        id:shape_picker
        size_hint: .4, 0.25
        pos_hint: {"bottom": 1}
        x: "60dp"
    ClayColorPicker:
        id:color_picker
        size_hint: .4, 0.75
        y: self.parent.ids.shape_picker.height
        x: "60dp"
    ClayJar:
        id:clay_jar
        pos_hint: {"left": 0, "center_y": 0.3}

    WorkSpace:
        size_hint: .49, .8
        pos_hint: {"right": .98, "bottom": 1}

    LevelShowButton:
        id:level_show_button
        size_hint: .25, .1
        pos_hint: {"right": .8, "top": .96}
        
