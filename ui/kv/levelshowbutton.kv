#:kivy 1.10.0

<LevelShowButton>:
    anchor_x: 'center'
    anchor_y: 'center'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -3
            spread_radius: -3, -3
            border_radius: self.width / 2, self.width / 2, self.width / 2, self.width / 2
            blur_radius: 20 if self.state == "normal" else 10

    Image:
        source: 'assets/textures/show_level_button.png'
        size: self.size
        pos: self.pos
        fit_mode: "fill"

    Label:
        text: "View level " + str(self.parent.parent.show_times) + " times"
        font_size: "20dp"
        color: 1,1,1,1
        font_name: "assets/fonts/main.ttf"