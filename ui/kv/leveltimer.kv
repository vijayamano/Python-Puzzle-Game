#:kivy 1.10.0

<LevelTimer>:

    Image:
        center_x: root.center_x
        center_y: root.center_y
        size: root.size
        source: 'assets/textures/level_timer_bg.png'
        fit_mode: "fill"
    Label:
        id: timer
        text: root.time
        font_size: 30
        color: 1,1,1,1
        font_name: 'assets/fonts/main.ttf'
        pos_hint: {'center_x': .5, 'center_y': .7}
