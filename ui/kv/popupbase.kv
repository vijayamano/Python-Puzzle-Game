#:kivy 1.0.9
<PopupBase>:
    size_hint:.4,.4
    background:"assets/textures/difficulty_level_bg.png"
    overlay_color: 0, 0, 0, 0
    separator_color: 0, 0, 0, 0
    title_align: "center"
    title_color: 1,1,1,1
    title_size: "60sp"
    title_font: "assets/fonts/main.ttf"
    padding: "10dp"


<PopupContent>:
    anchor_x: "center"
    anchor_y: "center"
    padding: "30dp"

    Image:
        source: "assets/textures/popup_bg.png"
        size_hint: 1,1
        fit_mode: "fill"

    Label:
        text: root.description
        font_size: "30sp"
        font_name: "assets/fonts/main.ttf"
        color: 0.1,0.1,0.1,.7
        size_hint: .7,None
        text_size: self.width, None
        pos_hint: {"center_x":.5,"center_y":.5}
        halign: "center"
